<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>编译系统 - @ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@

    @*2、bootstrap组件引用*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    @*3、bootstrap table组件以及中文包的引用*@
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />


    @*5、toastr提示组件的引用*@
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    @RenderSection("css", required: false)
</head>
<body>
    <header id="main_header">
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 text-left">
                        @*<a href="#">
                                <i class="glyphicon glyphicon-education"></i>
                                <span>PMY编译系统</span>
                            </a>*@
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <i class="glyphicon glyphicon-user"></i>
                        <span id="currentUserName"></span>
                        |
                        <a href="~/Login/UserLoginout">
                            退出登录
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="navbar navbar-static-top" style="margin-bottom: 5px">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar" style="background-color: #888;"></span>
                        <span class="icon-bar" style="background-color: #888;"></span>
                        <span class="icon-bar" style="background-color: #888;"></span>
                    </button>
                    @*@Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <a class="navbar-brand" href="#">
                        <i class="glyphicon glyphicon-home"></i>
                        <span>PMY编译系统</span>
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" id="menuList">
                        @*<li>@Html.ActionLink("SVN操作", "Index", "SVNOperation")</li>
                            <li>@Html.ActionLink("编译", "Index", "ProjectOperation")</li>
                            <li>@Html.ActionLink("打包", "Index", "Home")</li>
                            <li>@Html.ActionLink("打包记录", "Index", "Home")</li>
                            <li>@Html.ActionLink("任务列表", "Index", "TaskOperation")</li>
                            <li>@Html.ActionLink("后台管理", "Index", "Background")</li>*@
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - PMY编译系统</p>
        </footer>
    </div>
    @*1、Jquery组件引用*@
    <script src="~/Scripts/Jquery-1.10.2/jquery-1.10.2.js"></script>

    @*2、bootstrap组件引用*@
    <script src="~/Scripts/bootstrap.js"></script>

    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false }); 

            $.get("/Menu/GetMenuList", function (data) {
                $("#menuList").html(data.Tag);
            });

            $.get("/UserManagement/GetCurrentUser", function (data) {
                $("#currentUserName").html(data.UserName);
            });

        });

    </script>

    @*3、bootstrap table组件以及中文包的引用*@
    <script src="~/Scripts/bootstrap-table.min.js"></script>
    <script src="~/Scripts/bootstrap-table-zh-CN.min.js"></script>

    @*4、页面Js文件的引用*@
    <script src="~/Scripts/ExtentScripts/ConfirmBox.js"></script>
    <script src="~/Scripts/datapattern.js"></script>

    @*5、toastr提示组件的引用*@
    <script src="~/Scripts/toastr.min.js"></script>

    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
