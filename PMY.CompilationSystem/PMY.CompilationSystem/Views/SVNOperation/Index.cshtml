
@{
    ViewBag.Title = "SVN操作";
}

@section css{
    <style>
        #CMDMessage {
            padding:10px
        }
        #CMDMessage li:nth-of-type(odd) {
            margin-left:0px;
            font-size:10px;
            background: #ddd;
        }

        #CMDMessage li:nth-of-type(even) {
            margin-left: 0px;
            font-size: 10px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-md-3 hidden-sm hidden-xs">
            <div style="border-bottom:1px solid #ddd; color: #337ab7">
                <h4>实时信息：</h4>
            </div>
            <div class="pre-scrollable" style="max-height: 500px;overflow:auto">
                <ul id="CMDMessage"></ul>
            </div>
        </div>
        <div class="col-md-9 col-sm-12 col-xs-12">

            <div id="toolbar_svnfolders" class="btn-group">
                <button id="btn_svnupdate" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span> 更新
                </button>

                <button id="btn_folderopen" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> 打开
                </button>
            </div>

            <table id="tb_svnfolders"></table>

        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/SVNOperation/Index.js"></script>
    <script src="~/Scripts/ExtentScripts/FolderOrFileOperation.js"></script>

}

